{
  "info": {
    "name": "Products API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API collection for Product management operations"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Products Management",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Product Name",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Product Description",
                  "type": "text"
                },
                {
                  "key": "short_description",
                  "value": "Short Description",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "100.00",
                  "type": "text"
                },
                {
                  "key": "stock",
                  "value": "10",
                  "type": "text"
                },
                {
                  "key": "discount",
                  "value": "0",
                  "type": "text"
                },
                {
                  "key": "category_id",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "is_show",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "images[]",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/admin/v1/products",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "v1",
                "products"
              ]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Updated Product Name",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Updated Product Description",
                  "type": "text"
                },
                {
                  "key": "short_description",
                  "value": "Updated Short Description",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "150.00",
                  "type": "text"
                },
                {
                  "key": "stock",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "discount",
                  "value": "10",
                  "type": "text"
                },
                {
                  "key": "category_id",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "is_show",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "images[]",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/admin/v1/products/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "v1",
                "products",
                "1"
              ]
            }
          }
        }
      ]
    }
  ]
}
